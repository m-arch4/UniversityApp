
<div class="row">
  <div class="col s12">
    <h3 align="center"> Students Directory </h3>
  </div>
</div>


<div class="row">
  <% @students.each do |k| %>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"> <%= k.name %></span>
        <p>Username: <%= k.username %></p>
        <p>Email: <%= k.email %></p>
        <p>Course enrollments:</p>
        <p><%= k.course.title %></p>
      </div>
      <div class="card-action">
        <%= link_to "VIEW PROFILE", student_path(k) %>
      </div>
    </div>
  </div>
  <% end %>
</div>

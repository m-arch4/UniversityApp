<%= render 'shared/errors', obj: @student %>


<div class="row">
  <div class="col s12">
    <h3><%= @student.new_record? ? "Sign up" : "Edit your profile" %></h3>
  </div>
</div>




    <div class="row">
      <div class="col s6">
          <%= form_for(@student, :html => { class: "col 12", role: "form"}) do |f| %>
            <br>
            <div class="row">
                <%= f.label :name %>
                <%= f.text_field :name, placeholder: "enter your name", class: "validate", id: "name" %>
            </div>

            <div class="row">
              <%= f.label :username %>
              <%= f.text_field :username, placeholder: "enter your username", class: "validate", id: "username" %>
              </div>


            <div class="row">
                <%= f.label :email %>
                <%= f.email_field :email, placeholder: "enter your email", class: "validate", id: "email" %>
            </div>

            <div class="row">
                <%= f.label :password %>
                <%= f.password_field :password, placeholder: "enter your password", class: "validate", id: "password" %>
            </div>

            <div class="row">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, placeholder: "confirm your password", class: "validate", id: "password" %>
            </div>

            <div class="row">

            <%= f.select(:course_id) do %>
              <% [['CS111: Intro to Computer Science', 1], ['CS112: Data Structures', 2], ['CS205: Intro to Linear Algebra', 3]].each do |c| %>
                <%= content_tag(:option, c.first, value: c.last) %>
              <% end %>
            <%end %>
            </div>


            <div class="row">
              <%= f.button(@student.new_record? ? '<i class="material-icons right">arrow_forward</i>SIGN UP'.html_safe : '<i class="material-icons right">arrow_forward</i>SUBMIT UPDATES'.html_safe, class: "btn teal waves-effect waves-light") %>
            </div>
          <% end %>
      </div>
    </div>

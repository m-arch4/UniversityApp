<%= render 'shared/errors', obj: @student %>


<div class="row">
  <div class="col s12">
    <h3><%= @student.new_record? ? "Sign up" : "Edit your profile" %></h3>
  </div>
</div>




    <div class="row">
      <div class="col s6">
          <%= form_for(@student, :html => { class: "col 12", role: "form"}) do |f| %>
            <br>
            <div class="row">
                <%= f.label :name %>
                <%= f.text_field :name, placeholder: "enter your name", class: "validate", id: "name" %>
            </div>

            <div class="row">
              <%= f.label :username %>
              <%= f.text_field :username, placeholder: "enter your username", class: "validate", id: "username" %>
              </div>


            <div class="row">
                <%= f.label :email %>
                <%= f.email_field :email, placeholder: "enter your email", class: "validate", id: "email" %>
            </div>
            <div class="row">
                <%= f.label :password %>
                <%= f.password_field :password, placeholder: "enter your password", class: "validate", id: "password" %>
            </div>

            <div class="row">
                <%= f.label :course_id %>
                <%= f.number_field :course_id, placeholder: "enter your course id", class: "validate", id: "course" %>
            </div>


            <div class="row">
              <%= f.submit(@student.new_record? ? "SIGN UP": "SUBMIT UPDATES", class: "btn teal waves-effect waves-light") %>
            </div>
          <% end %>
      </div>
    </div>

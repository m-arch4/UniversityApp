<div class="row">
  <div class="col s12">
    <h3 align="center"> Course Listing </h3>
  </div>
</div>


<div class="row">
  <% @courses.each do |k| %>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= k.title %></span>
        <p><%= k.description %></p>
      </div>
      <div class="card-action">
        <a href="#">ENROLL</a>
        <a href="#">INFO</a>
      </div>
    </div>
  </div>
  <% end %>
</div>

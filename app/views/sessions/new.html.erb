<h3 align="center">Log in<h3>

  <div class="row">
    <div class="col s6">
        <%= form_for(:sessions, :html => { class: "col 12", role: "form"}) do |f| %>
          <br>

          <div class="row">
              <%= f.label :email %>
              <%= f.email_field :email, placeholder: "enter your email", class: "validate", id: "email", autofocus: true %>
          </div>

          <div class="row">
              <%= f.label :password %>
              <%= f.password_field :password, placeholder: "enter your password", class: "validate", id: "password" %>
          </div>

          <div class="row">
            <%= f.button '<i class="material-icons right">arrow_forward</i>LOG IN'.html_safe, class: "btn teal waves-effect waves-light" %>
          </div>
        <% end %>
    </div>
  </div>
